<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gupta.pranay.mobilecomputingproject">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_wheelchair"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        
        <activity android:name=".View.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.AlarmActivity">
        </activity>

        <activity android:name=".View.SpeechToTextActivity" />
        <activity android:name=".View.TextToSpeechActivity" />
        

    </application>

</manifest>