<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBlueBase"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/btn_blind"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textColor="@android:color/black"
        android:background="@drawable/button_rounded"
        android:text="ALARM HELP"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="152dp" />

    <Button
        android:id="@+id/btn_deaf"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:textColor="@android:color/black"
        android:background="@drawable/button_rounded"
        android:text="SPEECH TO TEXT"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_dumb" />

    <Button
        android:id="@+id/btn_dumb"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:textColor="@android:color/black"
        android:background="@drawable/button_rounded"
        android:text="TEXT TO SPEECH"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_blind"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPeachLow"
        android:textSize="23sp"
        android:text="CHOOSE YOUR SUPPORT"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="135dp" />
</android.support.constraint.ConstraintLayout>